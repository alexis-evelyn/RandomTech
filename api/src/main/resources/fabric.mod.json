{
  "schemaVersion": 1,
  "id": "randomtechapi",
  "version": "${version}",

  "name": "Alexis' Random Tech API",
  "description": "API for Alexis' Random Tech!!!",
  "authors": [
    "Alexis Evelyn",
    "hackaholic5069 (Texture Designer)"
  ],
  "contributors": [

  ],
  "contact": {
    "homepage": "https://github.com/alexis-evelyn",
    "sources": "https://github.com/alexis-evelyn/RandomTech",
    "issues": "https://github.com/alexis-evelyn/RandomTech/issues",
    "discord": "https://discord.gg/kBKwmdw"
  },

  "license": "MIT",
  "icon": "assets/api/icon.png",
  "accessWidener" : "api.accesswidener",

  "environment": "*",
  "entrypoints": {
    "main": [
      "me.alexisevelyn.randomtech.api.Main"
    ],
    "modmenu": [
      "me.alexisevelyn.randomtech.api.modmenu.ModMenu"
    ]
  },
  "mixins": [
    "mixins/armor/damage-armor-mixin.json",
    "mixins/enchanting/enchant-helper-mixin.json",
    "mixins/recipe/smithing-recipe-nbt-modifier-mixin.json",
    "mixins/armor/dynamic-armor-texture-mixin.json",
    "mixins/enchanting/powered-mending-helper-mixin.json",
    "mixins/overpowered/breakable-blocks-mixin.json",
    "mixins/overpowered/kill-prevention-mixin.json"
  ],

  "depends": {
    "fabricloader": ">=0.7.4",
    "fabric": "*",
    "minecraft": "1.16.x",
    "reborncore": ">=4.3.1"
  },
  "suggests": {
  },

  "custom": {
    "modmenu:api": true,
    "modmenu:clientsideOnly": false,
    "modmenu:parent": "randomtech",
    "modsoftheworld:logo": "api:icon.png",
    "modsoftheworld:splashes": "api:splashes.txt"
  }
}
