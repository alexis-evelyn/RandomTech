{
  "schemaVersion": 1,
  "id": "randomtech",
  "version": "${version}",

  "name": "Alexis' Random Tech",
  "description": "Just Random Tech!!!",
  "authors": [
    "Alexis Evelyn"
  ],
  "contact": {
    "homepage": "https://github.com/alexis-evelyn",
    "sources": "https://github.com/alexis-evelyn/RandomTech"
  },

  "license": "MIT",
  "icon": "assets/randomtech/icon.png",
  "accessWidener" : "randomtech.accesswidener",

  "environment": "*",
  "entrypoints": {
    "main": [
      "me.alexisevelyn.randomtech.Main"
    ],
    "client": [
      "me.alexisevelyn.randomtech.MainClient"
    ],
    "server": [
      "me.alexisevelyn.randomtech.MainServer"
    ],
    "modmenu": [
      "me.alexisevelyn.randomtech.modmenu.ModMenu"
    ],
    "rei_plugins": [
      "me.alexisevelyn.randomtech.rei.plugin.REIPlugin"
    ]
  },
  "mixins": [
    "mixins/example/example-mixin.json",
    "mixins/armor/damage-armor-mixin.json",
    "mixins/enchanting/enchant-helper-mixin.json",
    "mixins/recipe/smithing-recipe-nbt-modifier-mixin.json",
    "mixins/armor/dynamic-armor-texture-mixin.json",
    "mixins/blocks/cobalt-wiring-mixin.json",
    "mixins/experiments/death-screen-mixin.json",
    "mixins/experimentalscreen/gamerule-based-backup-screen-mixin.json",
    "mixins/enchanting/powered-mending-helper-mixin.json",
    "mixins/overpowered/breakable-blocks-mixin.json",
    "mixins/overpowered/kill-prevention-mixin.json"
  ],

  "depends": {
    "fabricloader": ">=0.7.4",
    "fabric": "*",
    "minecraft": "1.16.x",
    "reborncore": ">=4.3.1",
    "nbtcrafting": "*"
  },
  "suggests": {
    "hywla": "*",
    "patchouli": "*",
    "techreborn": "*"
  },

  "custom": {
    "waila:plugins": {
      "id": "randomtech:waila",
      "initializer": "me.alexisevelyn.randomtech.waila.WailaRegistry"
    }
  }
}
